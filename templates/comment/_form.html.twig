{{ form_start(form) }}
<div class="row d-flex flex-column">
    <div class="row col-lg-12 justify-content-center">
        <img class="preview-img" id="previewPicture" alt="photo de votre avatar"
             src="{{ comment.picture ? vich_uploader_asset(comment, 'pictureFile') : asset('/build/images/defaultpicture.png') }}">
    </div>
    <div class="row col-lg-12 justify-content-center mt-5">
        <span class="col-lg-12 text-center">
            Taille recommand√©e : 300*300 - (poids &lt;2Mo)
        </span>
        <div class="col-lg-12 text-center" id="pictureName">{{ form_label(form.pictureFile) }}</div>
        <span class="invalid-feedback d-block text-center" id="errorFile"></span>
    </div>
    <div class="form-group col-lg-12">
        {{ form_widget(form.pictureFile) }}
    </div>
</div>

<div class="row">
    <div class="form-group col-lg-6">
        {{ form_label(form.firstname) }}<i class="fas fa-asterisk"></i>
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text prep-color"><i class="fas fa-user-circle"></i></span>
                </div>
                {{ form_widget(form.firstname) }}
            </div>
        </div>
        {{ form_errors(form.firstname) }}
    </div>
    <div class="form-group col-lg-6">
        {{ form_label(form.lastname) }} <i class="fas fa-asterisk"></i>
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text prep-color"><i class="far fa-user-circle"></i></span>
                </div>
                {{ form_widget(form.lastname) }}
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    {{ form_label(form.mail) }} <i class="fas fa-asterisk"></i>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-envelope-open"></i></span>
            </div>
            {{ form_widget(form.mail) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="form-group col-lg-6">
        {{ form_label(form.job) }}<i class="fas fa-asterisk"></i>
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text prep-color"><i class="fas fa-briefcase"></i></span>
                </div>
                {{ form_widget(form.job) }}
            </div>
        </div>
    </div>
    <div class="form-group col-lg-6">
        {{ form_label(form.company) }}
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text prep-color"><i class="fas fa-building"></i></span>
                </div>
                {{ form_widget(form.company) }}
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    {{ form_label(form.comment) }}
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-circle"></i></span>
            </div>
            {{ form_widget(form.comment) }}
        </div>
    </div>
</div>
<div class="form-group">
    {{ form_label(form.consComment) }} <i class="fas fa-asterisk"></i>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-minus-circle"></i></span>
            </div>
            {{ form_widget(form.consComment) }}
        </div>
    </div>
</div>
<div class="form-group">
    {{ form_label(form.prosComment) }} <i class="fas fa-asterisk"></i>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-plus-circle"></i></span>
            </div>
            {{ form_widget(form.prosComment) }}
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <button class="btn btn-primary button-save">{{ button_label|default('Envoyer') }}</button>
</div>

{{ form_end(form) }}
