{% extends 'layoutAdmin.html.twig' %}

{% block title %}Gestion Catégories:{% endblock %}

{% block body %}
    <div class="container-fluid justify-content-between">
        <div class="row d-flex">
            <div>
                <a class="mr-auto p-1 col-md-1" href="{{ path('home_admin') }}"><i
                            class="fas fa-arrow-circle-left faback"></i></a>
            </div>
            <div class="mr-auto col-xs-12 col-md-4 text-center">
                <h1>Gestion des Catégories</h1>
            </div>
            <div class="col-sm-12 col-md-5">
                {{ include ('category_admin/new.html.twig') }}
            </div>
        </div>
        <div class="row d-flex justify-content-end mt-3">
            <div class="col-sm-12 col-md-2">
                <a href="{{ path('job_admin') }} ">
                    <button class="btn btn-primary button-save">Accéder aux fiches métiers</button>
                </a>
            </div>
        </div>
    </div>
        <section class="sectionSpace">

            <table class="col-12 mx-auto table">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Voir</th>
                </tr>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <th>{{ category.name }}</th>
                        <td>
                            <a class="col-xs-12 col-lg-12 col-md-1"
                               href="{{ path('category_admin_show', {'id': category.id}) }}"><i class="far fa-eye"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </div>
{% endblock %}
