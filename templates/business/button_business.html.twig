<button class="btn buttonModal" data-toggle="modal"
        data-target="#businessModal">{{ button_label|default('voir les entreprises') }}</button>
<div class="modal fade" id="businessModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Liste des entreprises</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% for business in businesses %}
                    <div class="row">
                        <img class="mx-auto col-6" src="{{ asset('build/images/'~business.logo) }}"/>
                        <a class="col-6 linkBusiness d-flex align-items-center" href="{{ business.link }}"
                           target="_blank">{{ business.name }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>