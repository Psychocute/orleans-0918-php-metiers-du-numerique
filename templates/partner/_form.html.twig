{{ form_start(form) }}
<div class="row d-flex flex-column-reverse">
    <div class="row col-lg-12 justify-content-center">
        {{ form_widget(form.pictureFile) }}
    </div>
    <div class="row col-lg-12 justify-content-center mt-5">
        <span class="justify-content-center">Taille recommand√©e : 300*300 - (poids <2Mo)</span>
    </div>
    <div class="row col-lg-12 justify-content-center">
        <img class="preview-img" src="https://via.placeholder.com/300x300">
    </div>
</div>


<div class="form-group">
    <label class="control-label">{{ form_label(form.url) }}</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-link"></i></span>
            </div>
            {{ form_widget(form.url) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{ form_label(form.name) }}</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-user-circle"></i></span>
            </div>
            {{ form_widget(form.name) }}
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <button class="btn btn-primary button-save">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
