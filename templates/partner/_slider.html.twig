{% if partners|length > 0 %}
    <section class="slider">
        <div class="container-fluid bg-gray">
            <div class="row justify-content-center slider-title">
                <h3>Nos partenaires</h3>
            </div>
            <div class='container-slider container'>
                <div class='single-item'>
                    {% for partner in partners %}
                        <div class="">
                            <a href="{{ partner.url }}" target="_blank" class="text-center mx-auto">
                                {% set imgPath = asset('/build/images/defaultpicture.png') %}
                                {% if partner.picture is not empty %}
                                {% set imgPath = vich_uploader_asset(partner,'pictureFile') %}
                                {% endif %}
                                <img class="carousel-icon align-content-center" src="{{ imgPath }}" alt="photo de {{ partner.name }}">
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endif %}
