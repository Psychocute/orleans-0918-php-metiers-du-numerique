{% extends 'layoutFront.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row button-pills justify-content-center">
            <div class="col-xs-12 col-lg-offset-3 pillcategory pilltheme">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    {% for category in categories %}
                        <li class="nav-item">
                            <a class="nav-link text-uppercase font-weight-bold {% if loop.index == 1 %}active{% endif %}"
                               id="pills-{{ category.id }}-tab" data-toggle="pill" href="#pills-{{ category.id }}"
                               role="tab" aria-controls="pills-{{ category.id }}"
                               aria-selected="{% if loop.index == 1 %}true{% else %}false{% endif %}">{{ category.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="tab-content" id="pills-tabContent">
                {% for category in categories %}
                    <div class="tab-pane fade {% if loop.index == 1 %}show active{% endif %}"
                         id="pills-{{ category.id }}"
                         role="tabpanel" aria-labelledby="pills-{{ category.id }}-tab">
                        <div class="pannel-body">
                            {% for job in category.associatedJobs %}
                                <div class="col-xs-12 col-sm-6 col-md-4">
                                    <figure class="info-card">
                                        <div class="titre-card-responsive text-center">{{ category.name }}</div>
                                        <img class="img-responsive" src="{{ asset('build/images/'~job.picture) }}">
                                        <figcaption class="info-card-details animate">
                                            <div class="info-card-header">
                                                <div class="metacard">
                                                    <h3 class="metacard">{{ job.name }}</h3>
                                                    {% set nbComments = 0 %}
                                                    {% for comment in job.associatedComments %}
                                                        {% if comment.accepted %}
                                                            {% set  nbComments = nbComments + 1 %}
                                                        {% endif %}
                                                    {% endfor %}
                                                    <i class="far fa-comment"></i>
                                                    {{ nbComments }}

                                                </div>
                                            </div>
                                            <div class="info-card-detail">
                                                <p class="job-resum">{{ job.description }}...</p>
                                                <a href="{{ job.id }}" class="">
                                                    <button type="button" class="btn mx-auto">Voir la fiche</button>
                                                </a>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}