{{ form_start(form) }}

<div class="form-group">
    <label class="control-label">Nom<i class="fas fa-asterisk"></i></label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-link"></i></span>
            </div>
            {{ form_widget(form.author) }}
            {{ form_errors(form.author) }}
        </div>
    </div>
</div>
<p class="checkboxTxt"><input type="checkbox" id="checkForm"> : Je souhaite Ã©diter un organisme de formation ou une
    entreprise</p>
<div class="form-group form-checkbox" id="linkForm">
    <label class="control-label">lien de l'organisme de formation ou de l'entreprise</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-user-circle"></i></span>
            </div>
            {{ form_widget(form.link) }}
            {{ form_errors(form.link) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">Objet du mail<i class="fas fa-asterisk"></i></label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-user-circle"></i></span>
            </div>
            {{ form_widget(form.subject) }}
            {{ form_errors(form.subject) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">Email<i class="fas fa-asterisk"></i></label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-user-circle"></i></span>
            </div>
            {{ form_widget(form.mail) }}
            {{ form_errors(form.mail) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">Votre message<i class="fas fa-asterisk"></i></label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="far fa-envelope"></i></span>
            </div>
