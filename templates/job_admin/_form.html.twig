{{ form_start(form) }}
<div class="row d-flex flex-column">
    <div class="row col-lg-12 justify-content-center">
        <img class="preview-img" id="previewPicture" src="{{ job.picture ? vich_uploader_asset(job, 'pictureFile') : asset('/build/images/defaultjobpicture.png') }}">

    </div>
    <div class="row col-lg-12 justify-content-center mt-5">
        <span class="col-lg-12 text-center">Taille recommand√©e : 300*300 - (poids <2Mo) </span>
        <span class="invalid-feedback d-block text-center" id="errorFile"></span>
    </div>
    <div class="form-group col-lg-12">
        {{ form_widget(form.pictureFile) }}
    </div>
</div>

<div class="form-group">
    <label class="control-label">{{ form_label(form.associatedCategory) }}<i class="fas fa-asterisk"></i></label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-bookmark"></i></span>
            </div>
            {{ form_widget(form.associatedCategory) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{ form_label(form.name) }}<i class="fas fa-asterisk"></i></label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="far fa-user-circle"></i></span>
            </div>
            {{ form_widget(form.name) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{ form_label(form.description) }}<i class="fas fa-asterisk"></i></label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-file-signature"></i></span>
            </div>
            {{ form_widget(form.description) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{ form_label(form.video) }}</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-link"></i></span>
            </div>
            {{ form_widget(form.video) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{ form_label(form.videoTitle) }}</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="far fa-user-circle"></i></span>
            </div>
            {{ form_widget(form.videoTitle) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{ form_label(form.videoDescription) }}</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text prep-color"><i class="fas fa-file-signature"></i></span>
            </div>
            {{ form_widget(form.videoDescription) }}
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <button class="btn btn-primary button-save">{{ button_label|default('Enregistrer les modifications') }}</button>
</div>
{{ form_end(form) }}
