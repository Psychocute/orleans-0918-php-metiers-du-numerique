{% extends 'layoutFront.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-xs-12 text-center">
                <h1>Gestion des centre de formations :</h1>
            </div>
        </div>

        <section class="sectionSpace">
            <div class="row justify-content-center align-items-center mb-5">
                <div class="col-xs-8 col-md-3 d-flex">
                    <div class="admission-color valid"></div>
                    <p class="nowrap">Centre de formations validé</p>
                </div>
                <div class="col-xs-8 col-md-3 d-flex">
                    <div class="admission-color not-valid"></div>
                    <p class="nowrap">Centre de formations à valider</p>
                </div>
            </div>

            <table class="col-12 mx-auto table">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Lien</th>
                    <th scope="col">Voir</th>
                </tr>
                <tbody>
                {% for learningCenter in learningCenters %}
                    {% if learningCenter.accepted == 0 %}
                        <tr class="not-valid">
                            <th>{{ learningCenter.name }}</th>
                            <td>{{ learningCenter.mail }}</td>
                            <td>{{ learningCenter.link }}</td>
                            <td>
                                <a class="col-xs-12 col-lg-12 col-md-1"
                                   href="{{ path('learningCenter_admin', {'id': learningCenter.id}) }}"><i class="far fa-eye eye-white"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr class="valid">
                            <th>{{ learningCenter.name }}</th>
                            <td>{{ learningCenter.mail }}</td>
                            <td>{{ learningCenter.link }}</td>
                            <td>
                                <a class="col-xs-12 col-lg-12 col-md-1"
                                   href="{{ path('learningCenter_admin', {'id': learningCenter.id}) }}"><i class="far fa-eye"></i></a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </section>
    </div>
{% endblock %}
