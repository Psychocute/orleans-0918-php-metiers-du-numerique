<button class="btn buttonModal"
        id="btn-modalCompany">{{ button_label|default('voir les entreprises') }}</button>
<div id="myModalCompany" class="overlayCompany">
    <a href="javascript:void(0)" class="closebutton" id="closebtnCompany">&times;</a>
    <div class="container-fluid">
        <div class="modalSpace">
            <h1 class="modalTitle">Liste des entreprises</h1>
            <div class="modalSpace"></div>
            <div class="multiCol">
                {% for company in job.companies %}
                    <div class="row">
                        <div class="col-12 mt-4">
                            <img class="imgModal img-fluid"
                                 src="{{ asset('build/images/'~company.picture) }}" alt="{{ company.name }}"/>
                            <a class="linkBusiness col-6" href="{{ company.link }}"
                               target="_blank">{{ company.name }}</a>

                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>